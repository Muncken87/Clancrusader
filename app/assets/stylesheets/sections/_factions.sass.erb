@import "mixins/colors"
.factions
  background-image: url(image_path('grandpa.jpg'))
  height: 100%
  width: 100%
  max-height: 100%
  max-width: 100%
  background-size: cover
  padding: 10rem 0rem
  background-repeat: no-repeat

  .faction-intro
    h2
      font-weight: bold
      font-size: 4rem
      color: white
      margin-bottom: 4rem
      font-family: 'Fredoka One', cursive
      letter-spacing: 0.3rem
      line-height: 1


  .faction
    opacity: 1
    transition: all 0.3s
    cursor: pointer
    position: relative
    overflow: hidden
    margin-bottom: 3rem !important


  .faction-text

    .uk-button-primary
      background-color: $button-color

      &:hover
        background-color: lighten($button-color,10)

